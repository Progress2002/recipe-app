<h1>Shopping List</h1>

<table>
  <thead>
    <tr>
      <th>Food</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @recipe_foods.each do |recipe_food| %>
      <tr>
        <td><%= recipe_food.food_name %></td>
        <td><%= recipe_food.quantity %> <%= recipe_food.measurement_unit %></td>
        <!--<td>$<%= recipe_food.food_price %></td>--> 
        <td>$<%= recipe_food.food_price * recipe_food.quantity %></td> 
      </tr>
    <% end %>
  </tbody>
</table>

<p>Number of items in the shopping list: <%= @shopping_list_count %></p>

<p>Total price: $<%= @total_price %></p>
