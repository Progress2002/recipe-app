<%= form_with(model: @food, url: foods_path, method: :post, data: { turbo: false }) do |form| %>
    <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>

    <div class="field">
        <%= form.label :measurement_unit %>
        <%= form.text_field :measurement_unit %>
    </div>

    <div class="field">
        <%= form.label :quantity %>
        <%= form.text_field :quantity %>
    </div>    

    <div class="field">
        <%= form.label :price %>
        <%= form.number_field :price %>
    </div>

    <div class="actions">
        <%= form.submit "Add Food", class: "btn btn-primary" %>
    </div>
<% end %>
  