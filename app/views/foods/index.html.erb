<!-- app/views/foods/index.html.erb -->
<%= link_to "Add Food", new_food_path, class: "btn btn-primary" %>

<table>
  <thead>
    <tr>
      <th>Food Name</th>
      <th>Measurement Unit</th>
      <th>Unit Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.measurement_unit %></td>
        <td><%= food.price %></td>
        <td><%= button_to "Delete", food_path(food), method: :delete, data: { confirm: "Are you sure you want to delete this food?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
